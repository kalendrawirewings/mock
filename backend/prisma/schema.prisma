// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String?  @unique
  phone     String?  @unique
  password  String
  name      String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)

  // Relations
  resumes           Resume[]
  interviewSessions InterviewSession[]

  @@map("users")
}

model Resume {
  id       String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId   String   @map("user_id") @db.Uuid
  fileName String   @map("file_name")
  uploadDate DateTime @default(now()) @map("upload_date") @db.Timestamptz(6)

  // Personal Info stored as JSON
  personalInfo Json @default("{}") @map("personal_info") @db.JsonB

  // Resume Content
  skills  String[] @default([])
  summary String?

  // Analysis
  analysisStrengths    String[] @default([]) @map("analysis_strengths")
  analysisWeaknesses   String[] @default([]) @map("analysis_weaknesses")
  analysisSuggestions  String[] @default([]) @map("analysis_suggestions")
  analysisScore        Int      @default(0) @map("analysis_score")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)

  // Relations
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  experience         ResumeExperience[]
  education          ResumeEducation[]
  interviewSessions  InterviewSession[]

  @@map("resumes")
}

model ResumeExperience {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  resumeId    String   @map("resume_id") @db.Uuid
  company     String
  position    String
  duration    String
  description String[] @default([])
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  resume Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@map("resume_experience")
}

model ResumeEducation {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  resumeId    String   @map("resume_id") @db.Uuid
  institution String
  degree      String
  year        String
  gpa         String?
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  resume Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  @@map("resume_education")
}

model InterviewSession {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId               String   @map("user_id") @db.Uuid
  resumeId             String?  @map("resume_id") @db.Uuid
  date                 DateTime @default(now()) @db.Timestamptz(6)
  duration             Int      @default(0)
  status               String   @default("in-progress")

  // Scores and Feedback stored as JSON
  scores               Json     @default("{}") @db.JsonB
  feedback             Json     @default("{}") @db.JsonB

  // Question Progress
  currentQuestionIndex Int      @default(0) @map("current_question_index")
  totalQuestions       Int      @default(25) @map("total_questions")
  questionProgress     Json     @default("{}") @map("question_progress") @db.JsonB

  createdAt            DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt            DateTime @default(now()) @map("updated_at") @db.Timestamptz(6)

  // Relations
  user                User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  resume              Resume?                   @relation(fields: [resumeId], references: [id], onDelete: SetNull)
  questions           InterviewQuestion[]
  conversationEntries ConversationEntry[]
  resources           InterviewFeedbackResource[]

  @@map("interview_sessions")
}

model InterviewQuestion {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionId       String   @map("session_id") @db.Uuid
  category        String
  question        String
  expectedAnswer  String?  @map("expected_answer")
  candidateAnswer String?  @map("candidate_answer")
  isCorrect       Boolean? @map("is_correct")
  score           Int?
  feedback        String?
  sortOrder       Int      @default(0) @map("sort_order")
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  session             InterviewSession    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  conversationEntries ConversationEntry[]

  @@map("interview_questions")
}

model ConversationEntry {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionId  String    @map("session_id") @db.Uuid
  timestamp  DateTime  @default(now()) @db.Timestamptz(6)
  speaker    String
  message    String
  audioUrl   String?   @map("audio_url")
  questionId String?   @map("question_id") @db.Uuid
  category   String?
  sortOrder  Int       @default(0) @map("sort_order")
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  session  InterviewSession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question InterviewQuestion? @relation(fields: [questionId], references: [id], onDelete: SetNull)

  @@map("conversation_entries")
}

model InterviewFeedbackResource {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionId String   @map("session_id") @db.Uuid
  title     String
  url       String
  type      String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  session InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("interview_feedback_resources")
}
